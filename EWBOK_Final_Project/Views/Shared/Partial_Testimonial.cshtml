@using Model.EF;
@{
    var monitor = (User)ViewBag.Monitor;
    var member1 = (User)ViewBag.Member1;
    var member2 = (User)ViewBag.Member2;
    var member3 = (User)ViewBag.Member3;
}
<div class="latest-blog">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="title-all text-center">
                    <h1>Tin tức mới</h1>
                    <p>Hãy luôn cập nhật những tin tức mới nhất về sách nhé</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 col-lg-3 col-xl-3">
                <div class="blog-box" style="height:310px">
                    <div class="blog-img">
                        <img class="img-fluid" style="height:150px" src="~/Data/ImgAdmin/@monitor.ImagePath" alt="" />
                    </div>
                    <div class="blog-content">
                        <div class="title-blog">
                            <h3>@monitor.Name</h3>
                            <p>Trưởng nhóm - Code chính</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3 col-xl-3">
                <div class="blog-box" style="height:310px">
                    <div class="blog-img">
                        <img class="img-fluid" style="height:150px" src="~/Data/ImgAdmin/@member1.ImagePath" alt="" />
                    </div>
                    <div class="blog-content">
                        <div class="title-blog">
                            <h3>@member1.Name</h3>
                            <p>Thành viên - Làm giao diện</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3 col-xl-3">
                <div class="blog-box" style="height:310px">
                    <div class="blog-img">
                        <img class="img-fluid" style="height:150px" src="~/Data/ImgAdmin/@member2.ImagePath" alt="" />
                    </div>
                    <div class="blog-content">
                        <div class="title-blog">
                            <h3>@member2.Name</h3>
                            <p>Thành viên - Thiết kế về cơ sở dữ liệu và phân tích thiết kế hệ thống</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3 col-xl-3">
                <div class="blog-box" style="height:310px">
                    <div class="blog-img">
                        <img class="img-fluid" style="height:150px" src="~/Data/ImgAdmin/@member3.ImagePath" alt="" />
                    </div>
                    <div class="blog-content">
                        <div class="title-blog">
                            <h3>@member3.Name</h3>
                            <p>Thành viên - Chuẩn bị tư liệu về đồ án</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
